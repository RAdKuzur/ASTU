@page
@model Lab1.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete";
}
<div class="text-center">

    <h1 class="display-4">Просмотр</h1>
    <p>Просмотр</p>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Название блюда</th>
                <th scope="col">Ингридиенты</th>
                <th scope="col">Способ приготовления</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var dish in Model.dishes)
            {
                <tr>
                    <td>@dish.Name</td>
                    <td>@dish.Description</td>
                    <td>@dish.Type</td>
                </tr>
            }
        </tbody>
    </table>

    <h1 class="display-4">Удаление</h1>
    <p>Удаление по названию блюда</p>
    <form method="post" action="~/delete">
        <label>Название блюда:</label><br />
        <input type="text" name="name" /><br />
        <input type="submit" id="reloadButton" value="Удалить" />
    </form>
      @section Scripts {
        <script type="text/javascript">
            document.getElementById('reloadButton').onclick = function () {
                location.reload();
            };
        </script>
      }
</div>
