@model IEnumerable<Lab2.Models.Museum>

<h2>Просмотр музеев</h2>
 

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Адрес</th>   
            <th>Куратор</th>
            <th>Год</th> 
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Person</td>
                <td>@item.Year</td>
                <td>
                    <form asp-action="Edit" asp-route-id="@item.Id" style="display:inline;">
                        <button type="submit" class="btn btn-primary">Редактировать</button>
                    </form>
                    <form asp-action="Delete" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>

